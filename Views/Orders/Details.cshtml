@model UnityAssetStore.Models.Order

<h2>Детали заказа №@Model.Id</h2>

<dl class="row">
    <dt class="col-sm-3">Дата:</dt>
    <dd class="col-sm-9">@Model.OrderDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Статус:</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Сумма:</dt>
    <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>
</dl>

<h4>Товары:</h4>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Итого</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Asset?.Name</td>
                <td>@item.Asset?.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@(item.Asset?.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>