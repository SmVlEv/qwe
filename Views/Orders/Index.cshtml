@model IEnumerable<UnityAssetStore.Models.Order>

<h2>Заказы</h2>

@if (!Model.Any())
{
    <p>У вас пока нет заказов.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Дата</th>
                <th>Статус</th>
                <th>Сумма</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td><a asp-action="Details" asp-route-id="@order.Id">Подробнее</a></td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Корзина</a>
<a asp-controller="Assets" asp-action="Index" class="btn btn-secondary">Продолжить покупки</a>