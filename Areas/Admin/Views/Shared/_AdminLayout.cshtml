<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Админка Unity Asset Store</title>

    <!-- Подключаем Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Подключаем стили сайта (если есть кастомные) -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <div class="d-flex">

        <!-- Боковое меню админки -->
        <nav style="min-width: 250px; max-width: 250px; background: #f8f9fa; padding: 1rem;">
            <h4>Админ меню</h4>
            <ul class="nav flex-column mt-3">
                <li class="nav-item mb-2">
                    <a class="btn btn-primary w-100" href="/Admin/Dashboard/Index">Главная</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="btn btn-success w-100" href="/Admin/Dashboard/Add">Добавить товар</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="btn btn-warning w-100" href="/Admin/Category/Index">Категории</a>
                </li>
                <li class="nav-item mt-4 pt-3 border-top">
                    <a class="btn btn-outline-info w-100" href="/Admin/Users/Index">Пользователи</a>
                </li>
                <li class="nav-item mt-4 pt-3 border-top">
                    <a class="btn btn-danger w-100" href="/">← На сайт</a>
                </li>
            </ul>
        </nav>

        <!-- Основной контент -->
        <main class="p-4 w-100">
            @RenderBody()
        </main>
    </div>

    <!-- Подключаем JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>