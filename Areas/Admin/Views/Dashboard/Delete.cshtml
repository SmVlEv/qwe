@model UnityAssetStore.Models.Asset

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Удалить товар";
}

<h2>Вы уверены, что хотите удалить "@Model.Name"?</h2>

<form asp-area="Admin" asp-controller="Dashboard" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>