@model UnityAssetStore.Models.Asset

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Добавить товар";
}

<h2>Добавить товар</h2>

<form asp-area="Admin" asp-controller="Dashboard" asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <!-- Выпадающий список существующих изображений -->
    <div class="mb-3">
        <label asp-for="PreviewImageUrl">Выбрать изображение из папки</label>
        <select asp-for="PreviewImageUrl" class="form-select">
            <option value="">Выберите изображение</option>
            @foreach (var image in ViewBag.Images)
            {
                <option value="@image.Url">@image.Name</option>
            }
        </select>
        <span asp-validation-for="PreviewImageUrl" class="text-danger"></span>
    </div>

    <!-- Поле для загрузки нового файла -->
    <div class="mb-3">
        <label asp-for="PreviewImageUrl">Загрузить новое изображение</label>
        <input type="file" name="ImageFile" accept="image/*" class="form-control" />
        <span asp-validation-for="PreviewImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Выберите категорию</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>