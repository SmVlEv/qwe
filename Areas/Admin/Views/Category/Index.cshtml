@model IEnumerable<UnityAssetStore.Models.Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Управление категориями";
}

<div class="admin-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-tags me-2"></i> @ViewData["Title"]</h1>
        <a asp-area="Admin" asp-controller="Category" asp-action="Add"
           class="btn btn-admin btn-admin-primary">
            <i class="bi bi-plus-circle"></i> Добавить категорию
        </a>
    </div>

    <div class="card admin-card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Категории не найдены. Добавьте первую категорию.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Название</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>
                                        <strong>@category.Name</strong>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex">
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                                                   class="btn btn-sm btn-admin btn-admin-outline-primary me-2">
                                                    <i class="bi bi-pencil"></i> Изменить
                                                </a>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                                                   class="btn btn-sm btn-admin btn-admin-outline-danger">
                                                    <i class="bi bi-trash"></i> Удалить
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>